    <!--
    maxElementsInMemory 内存最多放多少个元素
    external true  不过期
    memoryStoreEvictionPolicy 内存过期策略
    timeToLiveSeconds 可以闲置多长时间
    timeToIdleSeconds 从创建开始可以活多长时间
    maxElementsOnDisk LocalTempSwap时有效，表示最多可以往磁盘写多少个
    diskExpiryThreadIntervalSeconds  磁盘元素是否过期的时间间隔
    memoryStoreEvictionPolicy  淘汰策略
    statistics 统计
    -->
    <cache name="user_cache"
           maxEntriesLocalHeap="1000"
           eternal="false"
           timeToLiveSeconds="600"
           timeToIdleSeconds="600"
           maxElementsOnDisk="10000000"
           diskExpiryThreadIntervalSeconds="120"
           memoryStoreEvictionPolicy="LRU"
           statistics="true"
    >


    <!--        -->
